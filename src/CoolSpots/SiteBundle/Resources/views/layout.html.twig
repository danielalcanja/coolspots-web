		<div class="top-bar">
			<div class="top-bar-ico"></div>
			<div class="back">
				<div class="aonde">
					<div class="ico-onde"></div>
					
					<div class="topo-input">
						<div class="ico-input"></div>
						<input type="text" class="inp-postar" placeholder="{% trans %}wdygt.field{% endtrans %}">
					</div>
					<input class="btn-padrao post" type="button" value="{% trans %}wdygt.submit{% endtrans %}">
				</div>
				
				<div class="best">
					<span>{% trans %}spots.best{% endtrans %} &nbsp; |</span>
					<span class="ico-melhores"></span>
					<ul>
						<li><a href="#">{% trans %}spots.best{% endtrans %}</a></li>
						<li class="noBor"><a href="">{% trans %}events.last{% endtrans %}</a></li>
					</ul>
				</div>
				
				<div class="top-ico">
					<span class="bor bl nor"></span>
					<em class="add-event">
						<em class="hint">Criar um evento</em>
					</em>
					<span class="bor br nor"></span>
				</div>
				<div class="top-ico">
					<span class="bor bl"></span>
					<em class="ind-location">
						<em class="hint">Indicar um lugar</em>
					</em>
					<span class="bor br nor"></span>
				</div>
								
				<div class="region">
					<span> CuiabÃ¡ &nbsp; > &nbsp; </span> <span> Brasil </span>
				</div>
			</div>
		</div>
        
		<div id="site">
			<div class="move">
				{% block body %}{% endblock %}
			</div>
		</div>
		
		<div class="bottom-bar">
			<a href="{{ path('main') }}" class="logo"></a>
			<ul>
				<li><a href="{{ path('about') }}"><span class="bor bl"></span>{% trans %}bottom.bar.about{% endtrans %}<span class="bor br nor"></span></a></li>
				<li><a href="{{ path('explore') }}"><span class="bor bl"></span>{% trans %}bottom.bar.explore{% endtrans %}<span class="bor br nor"></span></a></li>
			</ul>
			<div class="container-search">
				<input type="text" class="inp-search" placeholder="Procurar no site">
				<div class="bottom-ico search"></div>
			</div>
			<div class="info">
				<span class="name">Givanildo Oliveira</span>
				<span class="fav-fri">15 {% trans %}bottom.bar.favorites{% endtrans %} | 45 {% trans %}bottom.bar.friends{% endtrans %}</span>
			</div>
			<ul class="dir">
				<li><a href="{{ path('favorites') }}"><span class="bor bl nor"></span><em class="fav"></em><span class="bor br nor"></span></a></li>
				<li><a href="{{ path('messages') }}"><span class="bor bl"></span><em class="mes"><em class="tot">10</em></em><span class="bor br"></span></a></li>
			</ul>
		</div>
		
		<div class="shadown"></div>
    </body>
</html>