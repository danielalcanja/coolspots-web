<!DOCTYPE html>
<html>
    <head>
		<meta charset="UTF-8" />
		<meta property="fb:admins" content="1822973519" />
		<meta property="fb:app_id" content="231767200293108" />
		<meta property="og:url" content="http://www.coolspots.com.br/" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content="{{ site_title }}" />
		<meta property="og:image" content="{{ site_logo }}" />
		<meta property="og:description" content="{{ site_description }}"/>
		<meta property="og:site_name" content="{{ site_name }}" />
		
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
		<meta name="keywords" content="{{ site_keywords }}" />
		<meta name="title" content="{{ site_title }}" />
		<meta name="image" content="" />
		<meta name="description" content="" />
		
		<meta name="google" content="notranslate" />
		<meta http-equiv="pragma" content="no-cache" />
		<meta http-equiv="cache-control" content="no-cache" />
		<link href="{{ asset("favicon.ico") }} " rel="shortcut icon" type="image/x-icon">
        <title>{% block title %}{{ site_title }}{% endblock %}</title>
		
		<!-- Stylesheets -->
		<link href="{{ asset('bundles/site/css/style.css') }}" media="screen" rel="stylesheet" type="text/css">
		<link href="{{ asset('bundles/site/css/prettyPhoto.css') }} " rel="stylesheet" type="text/css" media="screen" charset="utf-8" />
		<link href="{{ asset('bundles/site/css/jquery.mCustomScrollbar.css') }}" rel="stylesheet" type="text/css" />
        {% block custom_stylesheets %}{% endblock %}
		<!-- /Stylesheets -->
		
		<!-- Javascripts -->
		<script src="{{ asset('bundles/site/js/jquery-1.10.2.min.js') }} " type="text/javascript"></script>
		<script src="{{ asset('bundles/site/js/main.js') }} " type="text/javascript"></script>
		<script src="{{ asset('bundles/site/js/jquery.lazyload.min.js') }} " type="text/javascript"></script>
		<script src="{{ asset('bundles/site/js/css3-mediaqueries.js') }} " type="text/javascript"></script>
		<script src="{{ asset('bundles/site/js/jquery.cycle.all.min.js') }} " type="text/javascript"></script>
		<script src="{{ asset('bundles/site/js/jquery.prettyPhoto.js') }} " type="text/javascript"></script>
		<script src="{{ asset('bundles/site/js/functions.js') }} " type="text/javascript"></script>
		<script src="{{ asset('bundles/site/js/jquery.mCustomScrollbar.min.js') }} " type="text/javascript"></script>
		<script src="{{ asset('bundles/site/js/jquery.timeago/jquery.timeago.js') }} " type="text/javascript"></script>
		<script src="{{ asset('bundles/site/js/jquery.timeago/locales/jquery.timeago.' ~ app.session.get('_locale', 'en_US') ~ '.js') }} " type="text/javascript"></script>
		{% block custom_javascripts %}{% endblock %}
		<!-- /Javascrits -->
		
		<script>
			var ENV_SCRIPT = {% if app.environment == 'dev' %} '/app_dev.php'; {% else %} ''; {% endif %}
		</script>
    </head>
    <body>
