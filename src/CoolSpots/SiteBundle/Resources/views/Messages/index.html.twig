		html += '			<div class=\"col2M\" contenteditable=\"true\">';
		html += '				<span class=\"userAdd borRad02\" data="'+jQuery(this).attr("data")+'">' + jQuery(this).attr("rel") + '<em contenteditable=\"false\"></em></span>';
		html += '			</div>';
		html += '		</div>';
