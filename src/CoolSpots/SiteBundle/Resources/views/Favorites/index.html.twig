{% extends 'SiteBundle::layout.html.twig' %}

{% block title %}SiteBundle:Favorites:index{% endblock %}

{% block body %}
<div class="page favorites">
	<div class="favorites-esq">
		<div class="content">
			<h1>Favoritos</h1>
			<span class="fav">15 Favoritos</span>
			
			<div class="content-esq">				
				<h3 class="marNo">Lugar mais frequentado</h3>
				
				<h2>Jasper Corner Tap & Kitchen</h2>
			
				<h3>Estabelecimentos</h3>
				<a class="estab estabAtivo" href="#" title="Restaurantes"><span class="pink"></span> Restaurantes <span class="total">210</span></a>
				<a class="estab" href="#" title="Bares"><span class="pink"></span>Bares <span class="total">350</span></a>
				<a class="estab" href="#" title="Cafés"><span class="pink"></span>Cafés <span class="total">28</span></a>
				<a class="estab" href="#" title="Sugestões"><span class="pink"></span>Sugestões <span class="total">10</span></a>
				
				<div class="clr h25"></div>
				<h3>Ordernar por</h3>
				
				<a class="order" href="#" title="Ordenar por Cidade">Cidade <span></span></a>
				<a class="order" href="#" title="Ordenar por Mais Spooters">Mais Spooters <span></span></a>
				<a class="order" href="#" title="Ordenar por Mais amigos">Mais amigos <span></span></a>
			</div>
		</div>
	</div>
</div>

<ul class="content favorite">
	{% for item in rs %}
		<li class="photo">
			<a href="{{ path('photo_show', {'idLocation' : item.id, 'slug' : item.slug}) }}" class="box">
				<div class="time">
					<div class="clock"></div>
					<div class="tmp"><span class="timeago" title="{{ item.dateUpdated|date() }}">{{ item.dateUpdated|date('d/m/Y') }}</span></div>
				</div>
				<div style="position:absolute; z-index:1;">
					<img class="lazy" src="{{ asset('bundles/site/images/photo-placeholder.png') }}" data-original="{{ item.coverPic }}" />
				</div>
				<div class="info">
					<h2 class="title">{{ item.name }}</h2>
					<div class="more">25 Spooters - 2 Friends</div>
				</div>
			</a>
			<div class="back" onclick="document.location='{{ path('photo_show', {'idLocation' : item.id, 'slug' : item.slug}) }}';"></div>
		</li>
		
	{% endfor %}
</ul>
<div class="pg-prev"></div>
<div class="pg-next"></div>
<div class="create" style="height:1px; display:block;"></div>
{% endblock %}