{% extends 'SiteBundle::layout.html.twig' %}

{% block custom_javascripts %}
{% endblock %}

{% block body %}
<div id="photo-list">
	<ul class="content">
		{% for item in rs %}
			<li class="photo li-{{ ul_count }}">
				<a href="{{ path('photo_show', {'idLocation' : item.id, 'slug' : item.slug}) }}" class="box">
					<div class="time">
						<div class="clock"></div>
						<div class="tmp"><span class="timeago" title="{{ item.dateUpdated|date() }}">{{ item.dateUpdated|date('d/m/Y') }}</span></div>
					</div>
					<div style="position:absolute; z-index:1;">
						<img class="lazy" src="{{ asset('bundles/site/images/photo-placeholder.png') }}" data-original="{{ item.lastPic }}" />
					</div>
					<div class="info">
						<h2 class="title">{{ item.name }}</h2>
						<div class="more">25 Spooters - 2 Friends</div>
					</div>
				</a>
				<div class="back" onclick="document.location='{{ path('photo_show', {'idLocation' : item.id, 'slug' : item.slug}) }}';"></div>
			</li>
			
			{% set ul_count = ul_count + 1 %}
		
			{% if ul_count == 3 %}
			</ul>
			<ul class="content">
				{% set ul_count = 1 %}
			{% endif %}
		{% endfor %}
	</ul>
</div>
{% endblock %}