{% endblock %}

{% block body %}
<!-- begin js template -->
<textarea id="locations_template" style="display: none;">
	{@foreach $T as item}
		<li class="photo">
			<a href="#" data-behavior="link" data-target="/{$T.item.id}/{$T.item.slug}" class="box">
				<div class="time">
					<div class="clock"></div>
					<div class="tmp">10m atr√°s</div>
				</div>
				<div style="position:absolute; z-index:1;">
